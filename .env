# Data Centralization Platform - Environment Configuration Template
# Copy this file to .env and fill in the required values

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/data_centralization
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=data_centralization
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# pgAdmin Configuration (optional)
PGADMIN_PASSWORD=admin

# Database Pool Configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=300
DB_STATEMENT_TIMEOUT=30000

# Environment Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# API Keys (add your actual API keys here)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
GITHUB_TOKEN=your_github_token
OPENWEATHER_API_KEY=your_openweather_api_key
TMDB_API_KEY=your_tmdb_api_key
NOTION_API_KEY=your_notion_api_key
OPENAI_API_KEY=your_openai_api_key

# LLM Configuration
OPENAI_MODEL=gpt-4-turbo-preview
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Correlation Analysis Settings
CORRELATION_SIGNIFICANCE_THRESHOLD=0.05
CORRELATION_MINIMUM_SAMPLE_SIZE=30

# Prefect Configuration
PREFECT_API_URL=http://localhost:4200/api
PREFECT_WORK_QUEUE=default

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
