# ============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ============================================================================
# Environment Identification
ENVIRONMENT=development
ENVIRONMENT_SHORT=dev

# Application Information
APP_NAME=data-centralization-platform
APP_VERSION=1.0.0

# Debug Settings
DEBUG=true
LOG_LEVEL=DEBUG

# API Configuration
API_HOST=localhost
API_PORT=8000
API_WORKERS=1

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_FORMAT=json
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
LOG_RETENTION_DAYS=30
ENABLE_DETAILED_LOGGING=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL Configuration
DATABASE_URL=postgresql://dev_user:dev_password@localhost:5432/data_centralization
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=data_centralization
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=dev_password

# Database Pool Configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=300
DB_STATEMENT_TIMEOUT=30000

# Test Database Configuration
TEST_DATABASE_URL=postgresql://dev_user:dev_password@localhost:5432/test_data_centralization

# ============================================================================
# DATA PROCESSING CONFIGURATION
# ============================================================================
# Data Storage Paths
DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed
DATA_INSIGHTS_PATH=./data/insights

# Batch Processing Settings
BATCH_SIZE=1000
MAX_WORKERS=4

# Correlation Analysis Settings
CORRELATION_THRESHOLD=0.5
CORRELATION_SIGNIFICANCE_THRESHOLD=0.05
CORRELATION_MINIMUM_SAMPLE_SIZE=30
SIGNIFICANCE_LEVEL=0.05

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
# Redis Connection
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# LLM CONFIGURATION
# ============================================================================
# Local LLM Settings (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3:8b-instruct-q4_K_M

# OpenAI Configuration
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_BASE_URL=https://api.openai.com/v1

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# ============================================================================
# WORKFLOW CONFIGURATION
# ============================================================================
# Prefect Workflow Settings
PREFECT_API_URL=http://localhost:4200/api
PREFECT_SERVER_HOST=localhost
PREFECT_SERVER_PORT=4200

# Celery Task Queue Settings
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# JWT Settings
JWT_SECRET_KEY=development_jwt_secret_key_12345
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys Encryption
ENCRYPTION_KEY=development_encryption_key_12345

# ============================================================================
# EXTERNAL API CONFIGURATION
# ============================================================================
# API Base URLs
SPOTIFY_BASE_URL=https://api.spotify.com/v1
SPOTIFY_ACCOUNTS_URL=https://accounts.spotify.com
GITHUB_BASE_URL=https://api.github.com
TMDB_BASE_URL=https://api.themoviedb.org/3
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5
MUSICBRAINZ_BASE_URL=https://musicbrainz.org/ws/2
NOTION_BASE_URL=https://api.notion.com/v1
POKEMON_GRAPHQL_URL=https://beta.pokeapi.co/graphql/v1beta

# OAuth Configuration
SPOTIFY_REDIRECT_URI=http://localhost:8080/callback
GITHUB_REDIRECT_URI=http://localhost:8080/auth/github/callback

# API Rate Limiting (per minute)
SPOTIFY_RATE_LIMIT=100
GITHUB_RATE_LIMIT=5000
TMDB_RATE_LIMIT=40
OPENWEATHER_RATE_LIMIT=60
NOTION_RATE_LIMIT=3
MUSICBRAINZ_RATE_LIMIT=1

# API Default Settings
OPENWEATHER_UNITS=metric
TMDB_LANGUAGE=en-US
MUSICBRAINZ_USER_AGENT=DataCentralizationPlatform/1.0 (development)

# ============================================================================
# DEVELOPMENT FEATURES
# ============================================================================
# Testing Configuration
PYTEST_TIMEOUT=30
ENABLE_TEST_MODE=false
MOCK_EXTERNAL_APIS=false

# Development Features
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILING=false
RELOAD_ON_CHANGE=true
ENABLE_PERFORMANCE_MONITORING=false
