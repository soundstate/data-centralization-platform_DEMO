{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "incremental": true,
    "composite": true,
    "jsx": "react-jsx"
  },
  "include": [
    "services/**/*",
    "ui/**/*",
    "client_tools/**/*",
    "functions/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.*",
    "**/*.spec.*",
    "**/node_modules/**/*"
  ],
  "references": [
    { "path": "./services" },
    { "path": "./ui" },
    { "path": "./client_tools" },
    { "path": "./functions" }
  ]
}
